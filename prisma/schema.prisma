generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Pedido {
  id          Int      @id @default(autoincrement())
  nome        String?            
  telefone    String
  itens       Json?              
  total       Float
  valorEntrega Float?
  modoEntrega String
  endereco    Json?              
  status      String   @default("recebido")
  criadoEm    DateTime @default(now())
}