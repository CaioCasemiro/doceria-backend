generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Pedido {
  id           Int      @id @default(autoincrement())
  nome         String?
  telefone     String
  itens        Json
  total        Float
  valorEntrega Float?
  modoEntrega  String
  endereco     Json?
  codigoPix    String
  status       String
  finalizado   Boolean  @default(false)
  criadoEm     DateTime @default(now())
}

model Doce {
  id                   Int     @id @default(autoincrement())
  nome                 String
  imagem               String  @default("")
  quantidadeDisponivel Int     @default(0)
  preco                Float       @default(0.0)
  categoria            String?
  isDestaque           Boolean  @default(false)
}
